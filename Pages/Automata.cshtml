@page
@model the_kern.com.Pages.AutomataModel
@{
    ViewData["Title"] = "Automata";
}
<div class="overlay">
    <div class="overlay header-bar">
        <h1 class="page-title">Automata Visualizer</h1>
    </div>
    <style>
        /* body { font-family: Arial, sans-serif; margin: 20px; } */

        .controls { margin: 20px 0;}
        .test-section { margin-top: 20px; }


        .test-section input { /*padding: 8px; font-size: 14px;*/ width: 300px }
    </style>


    <div class="controls">
        <button id="btn-add-state" class="active" onclick="setMode('add-state')">Add State</button>
        <button id="btn-add-transition" onclick="setMode('add-transition')">Add Transition</button>
        <button id="btn-delete" onclick="setMode('delete')">Delete</button>
        <button onclick="canvas.nodes = []; canvas.edges = []; canvas.draw();">Clear All</button>
    </div>

    <canvas id="automata-canvas"></canvas>
    <div class="test-section">
        <input type="text" id="test-input" placeholder="Enter string to test">
        <button onclick="testString()">Test</button>
        <button onclick="describeLanguage()">Regex</button>
    </div>

    <div id="result"></div>

    <script src="~/js/automata-canvas.js"></script>
    <script>
        function setMode(mode) {
            canvas.setMode(mode);

            document.querySelectorAll('.controls button').forEach(btn => {
                btn.classList.remove('active');
            });

            if (mode === 'add-state') document.getElementById('btn-add-state').classList.add('active');
            if (mode === 'add-transition') document.getElementById('btn-add-transition').classList.add('active');
            if (mode === 'delete') document.getElementById('btn-delete').classList.add('active');
        }

        async function testString() {
            const input = document.getElementById('test-input').value;
            await canvas.testString(input);
        }

        async function describeLanguage() {
            const dfa = canvas.exportDFA();
            console.log('dfa being sent:', dfa);

            const payload = { dfa: dfa};
            console.log('full payload:', JSON.stringify(payload, null, 2));


            const response = await fetch('/Api/AutomataDescribe', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ Dfa: dfa})
            });

            console.log('response status:', response.status);
            const text = await response.text();
            console.log('response body:', text);

            if (!response.ok) {
                alert('error: ' + text);
                return;
            }
            const result = JSON.parse(text);
            document.getElementById('result').innerHTML = `<div class="automata-output"><h3>Regex:</h3><p>${result.regex}</p></div>`;
        }
    </script>

</div>